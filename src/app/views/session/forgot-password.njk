{% extends "layout.njk" %}

{% block content %}

<section class="password container form">
  <form action="/users/forgot-password" method="post">

    <div class="header">
      <h3>Esqueceu a senha?</h3>
    </div>

    <div class="fields">
      <div class="item">
        <div>Email</div>
        <div class="input">
          <input 
            ype="email" 
            name="email" 
            placeholder="Digite o email cadastrado" 
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>

      <button class="button" type="submit">Entrar</button>

  </form>
</section>

{% endblock content %}