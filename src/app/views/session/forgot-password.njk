{% extends "layout.njk" %}

{% import "parts/cards.njk" as card %}

{% block content %}

{% call card.render('Esqueceu a senha?', 'password container')%}

<form action="/users/forgot-password" method="post">

    <div class="fields">
      <div class="item">
        <div>Email</div>
        <div class="input">
          <input 
            ype="email" 
            name="email" 
            placeholder="Digite o email cadastrado" 
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>

      <button class="button" type="submit">Entrar</button>

  </form>

  {% endcall %}

{% endblock content %}